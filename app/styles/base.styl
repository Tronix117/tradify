.clear
  clear           both

body
  background      url(../images/texture-linen.jpg) fixed
  font-family     Helvetica Neue, Helvetica, Arial, sans-serif
  font-size       1em

#viewport
  h2
    text-align: center;
    color: rgba(0, 0, 0, 0.6);
    font-size: 1em;
    font-weight: bold;
    text-shadow: 1px 1px 1px rgba(255, 255, 255, 0.4);
    margin-top 55px
    
  .translate-menu-bar
    &
      position: fixed;
      top: 0;
      height: 40px;
      left: 50%;
      margin-left: -200px;
      width: 400px;
      border-bottom-left-radius: 5px;
      border-bottom-right-radius: 5px;
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#EC8), color-stop(52%,#D3B67A), color-stop(82%,#B59665), color-stop(100%,#87603C))
      z-index: 100;
      box-shadow: 0px 2px 9px 1px rgba(0,0,0,0.5);
    &:after
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: transparent url(../images/leather.png);
      z-index: -1;
      border-bottom-left-radius: 5px;
      border-bottom-right-radius: 5px;
      content: '';
    .button
      &
        box-shadow: inset 0px 0px 1px 1px rgba(100,80,60,0.8), 0px 1px 1px 0px rgba(255,255,255,0.4);
        border-radius: 3px;
        margin-left: 12px;
        margin-top: 5px;
        padding: 5px;
        color: #543;
        font-family: Arial;
        font-weight: normal;
        font-size: 14px;
        text-shadow: 0px 1px 1px rgba(255, 255, 255, 0.6);
        background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0.3) 0%,rgba(255, 255, 255, 0.1) 25%, rgba(0, 0, 0, 0.05) 75%,rgba(0, 0, 0, 0.2) 100%);
        text-align: center;
        width: 26%;
        display: inline-block;
        cursor          default
      &:active
        background: -webkit-linear-gradient(top,rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.05) 25%, rgba(255, 255, 255, 0.05) 75%, rgba(255, 255, 255, 0.3) 100%);


  .translate-item
    &
      position        relative
      margin          20px
      border-radius   10px
      padding         15px
      box-shadow      1px 1px 8px 2px rgba(0, 0, 0, 0.4)
      background      #ffffff url(../images/leather.png)

    .value
      float           left
      width           30%
      margin-left     55px
      padding         10px
      background      rgba(0, 0, 0, 0.07)
      border-radius   10px
      box-shadow      inset 1px 1px 5px 0px rgba(0, 0, 0, 0.5)

    .translation
      &
        border-radius   10px
        box-shadow      inset 0 1px 1px 1px rgba(50,50,50,0.7), 0 2px 0px 0px rgba(255,255,255,0.7)
        border          none
        background      rgba(255, 255, 255, 0.7)
        padding         10px
        position        absolute
        top             15px
        left            440px
        bottom          15px
        right           200px
      &.wide
        right           15px

    .flag
      position: absolute;
      width: 30px;
      height: 30px;
      border-radius: 15px;
      left: 20px;
      top: 50%;
      margin-top: -15px;
      background: rgba(0, 0, 0, 0.2);
      box-shadow: inset 0 2px 6px 0px rgba(0,0,0,0.5),0 0px 2px 0px rgba(0,0,0,0.5);
      cursor: pointer;

    .flag1
      background-color: #ACF;
      box-shadow: 0 0px 2px 1px rgba(0,0,0,0.5);

    .flag2
      background-color #AEA
      box-shadow: 0 0px 2px 1px rgba(0,0,0,0.5);

    .flag3
      background-color: #FAA;
      box-shadow: 0 0px 2px 1px rgba(0,0,0,0.5);

    ul.infos
      &
        float: right;
        list-style: none;
        font-size: 14px;
        width 180px

      .info
        &
          vertical-align: middle;
          cursor: pointer;
          margin 5px
          padding-bottom 2px
        &:hover
          border-bottom: 1px dashed black;
        
        .arg
          font-weight bold

        .type
          text-style italic

        .comment
          text-style italic

        a
          font-size 12px
          vertical-align middle
